<Window x:Class="Grebarz古霸子.WPF_LicenseInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="【Grebarz】請輸入金鑰" Height="159.137" Width="300" MinHeight="3" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="205*"/>
        </Grid.ColumnDefinitions>
        <Label Content="請輸入 License Key :" VerticalAlignment="Top" Margin="10,10,18,0" Grid.ColumnSpan="2"/>
        <TextBox Name="LicenseTextBox" VerticalAlignment="Center" Margin="10,40,10,60" Grid.ColumnSpan="2" Height="28" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Grid.Column="1">
            <Button Content="確定" Click="OkButton_Click" Width="80" Margin="5"/>
            <Button Content="取消" Click="CancelButton_Click" Width="80" Margin="5"/>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="40" Margin="10,78,0,0" VerticalAlignment="Top" Width="40" Source="LOGO-120x120.jpg"/>
    </Grid>
</Window>
